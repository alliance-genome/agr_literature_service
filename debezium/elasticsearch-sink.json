{
  "name": "elastic-sink",
  "config": {
    "connector.class": "io.confluent.connect.elasticsearch.ElasticsearchSinkConnector",
    "tasks.max": "1",
    "topics": "reference_joined",
    "connection.url": "http://${ELASTICSEARCH_HOST}:${ELASTICSEARCH_PORT}",
    "transforms": "unwrap,key,dropPrefix",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "false",
    "transforms.key.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
    "transforms.key.field": "reference_id",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.ignore": "false",
    "type.name": "",
    "behavior.on.null.values": "delete",
    "schema.ignore": "true",
    "value.converter.schemas.enable": "false",
    "flush.timeout.ms": 1000000,
    "connection.timeout.ms": 1000000,
    "read.timeout.ms": 1000000,
    "max.buffered.records": 10000,
    "batch.size": 1500,
    "transforms.dropPrefix.type":"org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.dropPrefix.regex":"abc\\.public\\.reference",
    "transforms.dropPrefix.replacement":"${DEBEZIUM_INDEX_NAME}",
    "auto.create.indices.at.start": "false"
  }
}
